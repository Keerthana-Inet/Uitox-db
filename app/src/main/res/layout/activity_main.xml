<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_header1"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">
    <!--android:background="@drawable/bg_gradient"-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="5dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="5dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="5dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="5dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:cardMaxElevation="6dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="6dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="match_parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constr_lyt"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:text="Fuel Injection Pump-4cti 87kw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:padding="10dp"
              app:layout_constraintTop_toTopOf="parent"
              android:text="Back"
              android:id="@+id/back"
              android:textAllCaps="true"
              android:textSize="12dp"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_height="wrap_content"/>

          <View
              android:layout_width="match_parent"
              android:background="@color/black"
              android:id="@+id/view_bg"
              app:layout_constraintTop_toBottomOf="@+id/back"
              android:layout_height="1dp"/>
          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:text="Unit Price:"
              android:padding="10dp"
              android:textSize="15dp"
              android:id="@+id/unitprice"
              android:textColor="@color/black"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/view_bg"
              android:layout_height="wrap_content"/>

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:padding="10dp"
              android:text="₹ 1500"
              android:textSize="15dp"
              app:layout_constraintTop_toBottomOf="@+id/view_bg"
              app:layout_constraintStart_toEndOf="@+id/unitprice"
              android:layout_height="wrap_content"/>

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:padding="10dp"
              android:text="₹ 1500"
              android:textSize="15dp"
              android:id="@+id/price"
              android:textStyle="bold"
              android:textColor="@android:color/holo_red_light"
              app:layout_constraintTop_toBottomOf="@+id/view_bg"
              app:layout_constraintStart_toEndOf="@+id/unitprice"
              android:layout_height="wrap_content"/>
          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:id="@+id/available_stock"
              android:text="Available Stock"
              android:textAllCaps="true"
              android:padding="10dp"
              android:textStyle="bold"
              android:textSize="12dp"
              android:textColor="@color/black"
              app:layout_constraintTop_toBottomOf="@+id/price"
              android:layout_height="wrap_content"/>

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:id="@+id/tb_constraint"
              app:layout_constraintTop_toBottomOf="@+id/available_stock"
              android:layout_height="wrap_content">

          <TextView
              android:id="@+id/box1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="0dp"
              android:textStyle="bold"
              android:background="@drawable/background_border"
              android:layout_marginTop="16dp"
              android:text="WareHouse North \n 500"
              android:textSize="12dp"
              android:textColor="@color/black"
              android:textAllCaps="true"
              android:padding="6dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@+id/box2"
             />

          <TextView
              android:id="@id/box2"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="0dp"
              android:layout_marginTop="0dp"
              android:textStyle="bold"
              android:background="@drawable/background_border"
              android:text="WareHouse South \n 500"
              android:textSize="12dp"
              android:textColor="@color/black"
              android:textAllCaps="true"
              android:padding="6dp"
              app:layout_constraintLeft_toRightOf="@id/box1"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="@id/box1" />

          <TextView
              android:id="@+id/box3"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="0dp"
              android:layout_marginTop="0dp"
              android:background="@drawable/background_border"

              android:text="WareHouse East \n 500"
              android:textSize="12dp"
              android:textColor="@color/black"
              android:textAllCaps="true"
              android:padding="6dp"
              android:textStyle="bold"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@+id/box4"
              app:layout_constraintTop_toBottomOf="@id/box1" />

          <TextView
              android:id="@id/box4"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="0dp"
              android:textStyle="bold"
              android:layout_marginTop="0dp"
              android:background="@drawable/background_border"

              android:text="WareHouse West \n 500"
              android:textSize="12dp"
              android:textColor="@color/black"
              android:textAllCaps="true"
              android:padding="6dp"
              app:layout_constraintLeft_toRightOf="@id/box3"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="@id/box3" />
          <TextView
              android:id="@+id/box5"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="0dp"
              android:layout_marginTop="0dp"
              android:text="WareHouse NorthEast \n 500"
              android:textSize="12dp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:textAllCaps="true"
              android:padding="6dp"
              android:background="@drawable/background_border"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@+id/box4"
              app:layout_constraintTop_toBottomOf="@id/box3" />
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="0dp"
                  android:textStyle="bold"
                  android:layout_marginTop="0dp"
                  android:background="@drawable/background_border"
                  android:text="WareHouse NorthEast \n 500"
                  android:textSize="12dp"
                  android:textColor="@color/white"
                  android:textAllCaps="true"
                  android:padding="6dp"
                  app:layout_constraintLeft_toRightOf="@id/box5"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="@id/box5"  />


          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_marginTop="20dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:gravity="center"
              android:text="Quantity"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:id="@+id/quantity"
              android:textSize="18dp"
              app:layout_constraintTop_toBottomOf="@+id/tb_constraint"
              android:layout_height="wrap_content"/>
          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="wrap_content"
              android:id="@+id/count_constraint"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/quantity"
              android:layout_height="wrap_content">



          <ImageView
              android:id="@+id/img_minus"
              android:layout_height="50dp"
              android:layout_width="50dp"
              android:layout_marginTop="28dp"
              android:src="@drawable/minus_sign"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintRight_toLeftOf="@+id/txt_count" />

          <androidx.appcompat.widget.AppCompatTextView
              android:id="@+id/txt_count"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="28dp"
              android:padding="10dp"
              android:text="02"
              android:textSize="20dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toRightOf="@+id/img_minus" />

          <ImageView
              android:id="@+id/img_plus"
              android:layout_height="50dp"
              android:layout_width="50dp"
              android:layout_marginTop="28dp"
              android:src="@drawable/plus_sign"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/txt_count" />
          </androidx.constraintlayout.widget.ConstraintLayout>

          <View
              android:layout_width="match_parent"
              android:background="@android:color/darker_gray"
              android:layout_marginTop="10dp"
              android:id="@+id/view_footer"
              app:layout_constraintTop_toBottomOf="@+id/count_constraint"
              android:layout_height="1dp"/>
          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="15dp"
              android:padding="15dp"
              android:text="Total price:"
              android:id="@+id/total_price"
              android:textColor="@color/black"
              android:textSize="13dp"
              app:layout_constraintTop_toBottomOf="@+id/view_footer"
              android:layout_height="wrap_content"/>
          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_marginTop="20dp"
              android:padding="10dp"
              android:text="₹ 3000"
              android:background="@drawable/button_border"
              android:id="@+id/tot_price"
              android:textStyle="bold"
              android:textColor="@android:color/holo_red_dark"
              android:textSize="13dp"
              app:layout_constraintStart_toEndOf="@+id/total_price"
              app:layout_constraintTop_toBottomOf="@+id/view_footer"
              android:layout_height="wrap_content"/>

          <com.google.android.material.button.MaterialButton
              android:layout_width="wrap_content"
              android:layout_marginTop="15dp"
              android:padding="10dp"
              android:text="Add"
              android:textAllCaps="true"
             android:backgroundTint="@android:color/holo_red_light"
              android:id="@+id/btn_add"
              android:textStyle="bold"
              android:textColor="@android:color/white"
              android:textSize="13dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/view_footer"
              android:layout_height="wrap_content"/>

      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@null"
        android:id="@+id/database"
        android:text="Database Task"
        android:padding="5dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/cardview"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/scrollview"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottom_guide_line"
        app:layout_constraintEnd_toStartOf="@id/right_guide_line"
        app:layout_constraintStart_toEndOf="@id/left_guide_line"
        app:layout_constraintTop_toBottomOf="@id/bottom_guide_line"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/asp_constr_header"
            app:layout_constraintBottom_toTopOf="@id/bottom_guide_line"
            app:layout_constraintEnd_toStartOf="@id/right_guide_line"
            app:layout_constraintStart_toEndOf="@id/left_guide_line"
            app:layout_constraintTop_toBottomOf="@id/bottom_guide_line"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:id="@+id/toolbar"
                android:padding="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/img_back"
                    android:src="@drawable/back_arrow"
                    android:layout_height="40dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/color_blue"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:text="ASP Portal"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.Toolbar>
            <View
                android:layout_width="match_parent"
                android:id="@+id/view_asp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                android:layout_height="1dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/title_notes"
                android:text="@string/title_notes"
                app:layout_constraintTop_toBottomOf="@+id/view_asp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/name"
                android:text="@string/name"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/title_notes"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/name"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:textStyle="bold"
                    android:text="@string/txt_address"
                    android:textSize="15dp"
                    android:padding="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/lb_address"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@id/lb_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="@string/label_address"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:padding="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/txt_address" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:textStyle="bold"
                    android:text="@string/Chinnavedampatti"
                    android:textSize="15dp"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_address"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/lb_address"
                    />

                <TextView
                    android:id="@id/lb_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="@string/label_location"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_address"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_district"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:textStyle="bold"
                    android:text="@string/coimbatore"
                    android:textSize="15dp"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_location"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/lb_location"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lb_district"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="@string/lb_district"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_location"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:textStyle="bold"
                    android:text="@string/tamilnadu"
                    android:textSize="15dp"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_district"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/lb_district"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lb_state"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="@string/lb_state"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_district"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_pincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:textStyle="bold"
                    android:text="@string/txt_pincode"
                    android:textSize="15dp"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_state"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/lb_state"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lb_pincode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="@string/lb_pincode"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_state"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_numb1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:textStyle="bold"
                    android:text="@string/numb1"
                    android:textSize="15dp"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_pincode"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/lb_pincode"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lb_num1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="@string/lb_contact1"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_pincode"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_numb2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:textStyle="bold"
                    android:text="@string/numb1"
                    android:textSize="15dp"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_numb1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/lb_num1"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lb_num2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="@string/lb_contact2"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:padding="6dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_numb1"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:id="@+id/lb_service"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/service_details"
                    app:layout_constraintTop_toBottomOf="@+id/txt_numb2"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:id="@+id/mech"
                    android:textColor="@color/black"
                    android:text="@string/mech"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lb_service"
                    android:layout_height="wrap_content"/>

